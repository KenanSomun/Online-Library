<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ba.unsa.etf.soma.spirala1_16736.FragmentPreporuci">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <Spinner
        android:id="@+id/sKontakti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/dPosalji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/str_posalji_mail" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="13"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eNaslovna2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/eNaziv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="35dp"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/eAutor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="27dp"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/eDatumObjavljivanja2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="20dp"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/eBrojStranica2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="20dp"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/eOpis2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="15dp"
                android:gravity="fill_horizontal"
                android:text="" />

        </LinearLayout>

</LinearLayout>
</FrameLayout>